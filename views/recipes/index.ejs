<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Recipes - CookBook</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <div class="container">
    <div class="recipe-header">
      <h1>My Recipes</h1>
      <a href="/recipes/new" class="add-recipe-btn">Add New Recipe</a>
    </div>
    
    <% if (recipes && recipes.length > 0) { %>
      <div class="recipe-grid">
        <% recipes.forEach(recipe => { %>
          <div class="recipe-card">
            <h3><a href="/recipes/<%= recipe._id %>" class="recipe-title"><%= recipe.name %></a></h3>
            <p class="recipe-ingredients">
              Ingredients: <%= recipe.ingredients.length %> items
            </p>
            <div class="recipe-actions">
              <a href="/recipes/<%= recipe._id %>" class="btn-view">View</a>
              <a href="/recipes/<%= recipe._id %>/edit" class="btn-edit">Edit</a>
              <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" class="delete-form">
                <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-state">
        <h2>You haven't created any recipes yet!</h2>
        <p>Start building your recipe collection by adding your first recipe.</p>
        <a href="/recipes/new" class="btn-primary">Create Your First Recipe</a>
      </div>
    <% } %>
  </div>
</body>
</html>